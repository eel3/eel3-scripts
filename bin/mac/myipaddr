#!/bin/sh
# -*- coding: utf-8-unix -*-
# vim:fileencoding=utf-8:ff=unix
# @(#) Print IP address only (for macOS).

set -u
umask 0022
IFS=$(printf ' \t\n_'); IFS=${IFS%_}
PATH=/bin:/sbin:/usr/bin
export IFS LC_ALL=C LANG=C PATH

readonly progname=${0##*/}
readonly version=1.1.0.20190508

# usage <exit-code>
usage() {
    echo "usage: $progname [-hv]" 1>&2
    exit $1
}

# version (no parameter)
version() {
    echo "$progname $version" 1>&2
    exit 0
}

# main routine

opt=
while getopts 'hv' opt; do
    case $opt in
    h)      usage 0 ;;
    v)      version ;;
    \?)     usage 1 ;;
    esac
done
shift $(($OPTIND - 1))

ifconfig |
sed '
1!{
    /^[[:graph:]]/i\
\

}' |
awk '
BEGIN {
    FS = "\n"
    RS = ""
}
$1 !~ /LOOPBACK/ && /inet/ {
    print sep $0
    sep = "\n"
}'
