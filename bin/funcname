#!/bin/sh
# -*- coding: utf-8-unix -*-
# vim:fileencoding=utf-8:ff=unix
# @(#) Pick up all function name from source code. Version 1.2.0.20190310
# need Exuberant Ctags

set -u
umask 0022
IFS=$(printf ' \t\n_'); IFS=${IFS%_}
export IFS LC_ALL=C LANG=C PATH

readonly progname=${0##*/}
readonly version=1.2.0

# usage <exit-code>
usage() {
    echo "usage: $progname [-hv] [file ...]" 1>&2
    exit $1
}

# version (no parameter)
version() {
    echo "$progname $version" 1>&2
    exit 0
}

# main routine

opt=
while getopts 'hv' opt; do
    case $opt in
    h)      usage 0 ;;
    v)      version ;;
    \?)     usage 1 ;;
    esac
done
shift $(($OPTIND - 1))

exec ctags --sort=no --fields=K -f - ${@+"$@"} | tr -d \\r | awk '
BEGIN {
    FS = "\t"

    kinds["function"] = 0
    kinds["method"] = 0
    kinds["procedure"] = 0
    kinds["subroutine"] = 0
    kinds["property"] = 0
}

{
    if ($NF in kinds) {
        print $1
    }
}'
