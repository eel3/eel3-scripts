#!/usr/bin/env python
# encoding: utf-8
# -*- coding: utf-8 -*-
# vim:fileencoding=UTF-8
# @(#) Command line tool to extract PCM data from RIFF WAVE file. Version 1.0.0.20161214

from __future__ import print_function

import argparse
import struct
import sys
import wave

def extpcm(wavfile, ostream):
    wr = wave.open(wavfile, 'rb')
    ostream.write(wr.readframes(wr.getnframes()))
    wr.close()

parser = argparse.ArgumentParser(description='Command line tool to extract PCM data from RIFF WAVE file.')
parser.add_argument('files', metavar='file', nargs='+', help="RIFF WAVE file")
parser.add_argument('-o', '--output', metavar='file', nargs='?',
                    type=argparse.FileType('wb'), default=sys.stdout,
                    help="place output in file")
parser.add_argument('-v', '--version', action='version', version='%(prog)s 1.0.0')
args = parser.parse_known_args()

retval = 0

for f in args[0].files:
    try:
        extpcm(f, args[0].output)
    except Exception as e:
        print(e, file=sys.stderr)
        retval = 1

sys.exit(retval)
