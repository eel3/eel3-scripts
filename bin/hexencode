#!/bin/sh
# @(#) Hex dump tool. Version 1.0.0.20140710

usage() {
    echo "usage: `basename "$0"` [-h] [file ...]" 1>&2
    exit $1
}

opt=
while getopts 'h' opt; do
    case $opt in
    h)      usage 0 ;;
    \?)     usage 1 ;;
    esac
done
shift `expr $OPTIND - 1`

exec od -A n -t x1 -v ${@+"$@"} | tr a-z A-Z | tr -d ' \n'
