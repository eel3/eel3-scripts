#!/bin/sh
# -*- coding: utf-8 -*-
# vim:fileencoding=UTF-8
# @(#) Command line tool to write disk image file to usb device (on Linux).

set -u
umask 0022
IFS=$(printf ' \t\n_'); IFS=${IFS%_}
PATH=/bin:/usr/bin
export IFS LC_ALL=C LANG=C PATH

readonly progname=${0##*/}
readonly version=1.1.1.20190405

# usage <exit-code>
usage() {
    cat <<- EOT
		usage: $progname [options] <image file> <device file>
		    -d <bzip2|gzip|lzma|xz|zip>
		      Decompress the compressed image file and write it.
		    -h
		      Show this help message and exit.
		    -v
		      Show program's version number and exit.
	EOT
    exit $1
}

# usage_on_ok (nop)
usage_on_ok() {
    usage 0
}

# usage_on_ng (nop)
usage_on_ng() {
    usage 1 1>&2
}

# version (no parameter)
version() {
    echo "$progname $version"
    exit 0
}

# perror <message>
perror() {
    echo "$progname:" ${@+"$@"} 1>&2
}

# error <message>
error() {
    perror ${@+"$@"}
    exit 1
}

# error_with_usage <message>
error_with_usage() {
    perror ${@+"$@"}
    usage_on_ng
}

# main routine

readcmd=cat

opt=
while getopts 'd:hv' opt; do
    case $opt in
    d)      [ "$readcmd" != cat ] && perror "-$opt: Duplicated. Use last one."
            case "$OPTARG" in
            bzip2)  readcmd=bzcat ;;
            gzip)   readcmd='gunzip -c' ;;
            lzma)   readcmd=lzcat ;;
            xz)     readcmd=xzcat ;;
            zip)    readcmd='unzip -p' ;;
            *)      error_with_usage "-$opt: Unknown argument: $OPTARG" ;;
            esac ;;
    h)      usage_on_ok ;;
    v)      version ;;
    \?)     usage_on_ng ;;
    esac
done
shift $(($OPTIND - 1))

[ $# -eq 2 ] || error_with_usage 'Need 2 arguments'

$readcmd $1 | sudo dd "of=$2" bs=64K iflag=fullblock oflag=direct
